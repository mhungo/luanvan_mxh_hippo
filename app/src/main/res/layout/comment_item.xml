<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:id="@+id/top_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/image_profile"
        android:background="@drawable/background_comment_item_layout"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_mhungo"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Hahaha"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_comment"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/image_profile"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timecomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="12:54 PM"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/likecomment"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Like"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/replycomment"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Reply"
            android:textAlignment="center" />


    </LinearLayout>


</RelativeLayout>